{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "es2015",
    "target": "es5",
  //   "jsx": "react",
    "allowJs": true,
    // "strict": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es2019"],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "suppressWhileTypeErrorsPresent": false
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "./src/**/*"
  ]
}
  